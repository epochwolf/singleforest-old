- title "Account - New Lit"
.subnav
  =link_to "Back to Dashboard", account_path
%h1.title New Literature (Step 2 of 3)
%h2.title Listing Information
- semantic_form_for(@literature, :url => literature_step3_path) do |f|
  -f.inputs :name => "", :id => "basic" do
    =f.input :title, :as => :hidden
    =f.input :contents, :as => :hidden
    =f.input :summary, :label => 'Summary', :hint => "This is the text that appears in literature listings <br/><span class=\"count\">200</span> characters remaining.<br/>" + h_hint, :input_html => { :rows => 5 }
    =f.input :artists_note, :as => :rich, :label => 'Artist\'s Note', :hint => "This appears before the content<br/>" + sf_hint, :input_html => { :rows => 5 }
    =f.input :note_to_commenters, :hint => "This is the text that appears in before comments<br/>" + sf_hint, :input_html => { :rows => 5 }
    
  -f.buttons do
    =f.commit_button "Submit Now as Draft"
    =f.commit_button "Next Step"
    =link_to "Cancel", account_path
