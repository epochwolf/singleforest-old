<% form_for @comment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :comment_thread_id %><br />
    <%= f.text_field :comment_thread_id %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :deleted_at %><br />
    <%= f.datetime_select :deleted_at %>
  </p>
  <p>
    <%= f.label :admin_note %><br />
    <%= f.text_area :admin_note %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
